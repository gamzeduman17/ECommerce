@model IEnumerable<ECommerce.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table  table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th>
                    Image
                </th>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Price
                </th>
                <th>
                    IsHome
                </th>
               
                <th>
                    IsStock
                </th>
                <th>
                    Category
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                     @if(item.Image==null)
                        {
                            <img src="~/images/image/noimage.png" width="80" height="60">
                        }
                        else
                        {
                            <img src="@item.Image" width="80" height="60">
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
               <td>
                   @if(item.IsHome)
                   {
                        <label class="btn btn-success btn-sm"><i class="bi bi-check2-circle"></i>Yes</label>
                   }
                   else
                   {
                        <label class="btn btn-danger btn-sm"><i class="bi bi-x-lg"></i>No</label>

                   }
               </td>
                  
                    <td>
                        @if (item.IsStock)
                        {
                            <label class="btn btn-success btn-sm"><i class="bi bi-check2-circle"></i>Yes</label>
                        }
                        else
                        {
                            <label class="btn btn-danger btn-sm"><i class="bi bi-x-lg"></i>No</label>

                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm"><i class="bi bi-pencil"></i>Edit</a> |

                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash2"></i>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/English.json"
                }
            });

        });

    </script>
}